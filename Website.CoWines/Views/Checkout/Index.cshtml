@model IEnumerable<Website.CoWines.ViewModel.ShoppingCartItemViewModel>

@{
    ViewBag.Title = "Your Basket";
}

<div class="row">
    <div class="page-header text-right">
        <h2 class="text-center">@ViewBag.Title</h2>
        <input type="button" class="btn btn-default" value="Continue To Checkout" />
    </div>
</div>
<div class="row">
    <div id="shoppingCartItems">
        @if (Model == null)
        {
            <h3 class="text-center">Basket is empty</h3>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-sm-4 text-center">
                    <a href="@Url.Content("~/Wine/Details/" + item.ProductId)">
                        <div class="thumbnail" id="@item.ProductId">
                            <img src="@Url.Content(item.ImgUrl)" alt="@item.Name">
                            <div class="caption">
                                <h4>@item.Name</h4>
                            </div>
                        </div>
                    </a>
                    <h4><b>Quantity:</b> @item.Quantity</h4>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-danger btn-remove-from-cart" value="Remove One" />
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-danger btn-remove-from-cart" value="Remove All" />
                    </div>
                    <div class="horizontal-divider visible-xs"></div>
                </div>
            }
        }
    </div>
</div>