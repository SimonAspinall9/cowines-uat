@model Website.CoWines.ViewModel.EditProductViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Edit</h2>

<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-3 control-label">Catalogue Number</label>
        <div class="col-sm-9">
            <input type="number" class="form-control" id="catalogueNumber" placeholder="Catalogue Number" name="CatalogueNumber" value="@Model.Product.CatalogueNumber" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Name</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="name" placeholder="Name" name="Name" value="@Model.Product.Name" />
        </div>
    </div>
    @* TODO: Use TinyMCE for the product description editor *@
    <div class="form-group">
        <label class="col-sm-3 control-label">Description</label>
        <div class="col-sm-9">
            <textarea class="form-control" id="description" placeholder="Description" name="Description" value="@Model.Product.Description"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Year</label>
        <div class="col-sm-9">
            <input type="text" list="years" class="form-control" placeholder="Year" name="Year" value="@Model.Product.Year" />
            <datalist id="years">
                @foreach (var year in Model.Years)
                {
                    <option value="@year.Id">@year.Name</option>
                }
            </datalist>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>
</form>