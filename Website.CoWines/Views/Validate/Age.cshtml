@model Website.CoWines.ViewModel.ValidateAgeViewModel

@{
    ViewBag.Title = "Enter Date of Birth";
    Layout = "~/Views/Shared/_Layout _No_Map_In_Footer.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Please enter your date of birth. Alternatively, log into your account.</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title.</h2>
        <div class="row">
            <div class="col-md-12">
                <section id="validateAgeForm">
                    <form action="@Url.Content("~/Validate/Age?ReturnUrl=" + ViewBag.ReturnUrl)" method="post" class="form-inline">
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })

                        <input type="date" class="form-control" name="DateOfBirth" />
                        <input type="submit" class="btn btn-default" value="Submit" />

                    </form>
                </section>
            </div>
        </div>
    </div>
    <hr class="hidden-md hidden-lg" />
    <div class="col-md-6">
        @Html.Partial("~/Views/Account/Login.cshtml")
    </div>
</div>
